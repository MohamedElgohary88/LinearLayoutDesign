<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinearLayoutDesign" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BkText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sizeTextBody</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BkText.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sizeTextTitle</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BkText.Body" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sizeTextBody</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="BkText.Hourly" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sizeTextBody</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_mid</item>
        <item name="android:paddingEnd">@dimen/margin_mid</item>
        <item name="android:background">@drawable/background_hours</item>
    </style>

</resources>